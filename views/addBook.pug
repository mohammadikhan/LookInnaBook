doctype html
// This page displays the page for adding a book
html(lang="en")
  head
    title Add Book
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width")
    link(rel="stylesheet" href="./css/homePageStyle.css")
    
  body(style="background-color: red;" background="/images/cinematicMoving.gif")
    .topnav

      //a.active(href="/") Home
      if status && user
        a.active(href="/") Welcome back #{name}
        a(href="/") Home
        a(href="/yourCart") Your Cart
        a(href="/addBook") Add Book
        a(href="/trackOrder") Track Order
        a(href="/reports") Reports
        a(href="/logout") Logout
      
      else if status
        a.active(href="/") Welcome back #{name} 
        a(href="/") Home        
        a(href="/yourCart") Your Cart
        a(href="/logout") Logout
      
      else 
        a.active(href="/") Home        
        a(href="/yourCart") Your Cart
        a(href="/login") Login
        a(href="/register") Create an Account

      
    h1 Add a Book
    .container 
      .subtitle Enter new Book information down below
      .signin-page
        .form
         form.search-template(action='/addBook' method='post')
            input#isbn(type="text" name='isbn' placeholder="Enter ISBN of the book" required maxlength='10')
            input#title(type="text" name='title' placeholder="Enter title of book" required)
            input#author(type="text" name='author' placeholder="Enter author name" required)
            input#genre(type="text" name='genre' placeholder="Enter your genre" required)
            input#p_id(type="text" name='p_id' placeholder="Enter publisher ID" required maxlength='6')
            input#pages(type="text" name='pages' placeholder="Enter number of pages" required maxlength='3') 
            input#price(type="text" name='price' placeholder="Enter price of book" required maxlength='3') 
            input#stock(type="text" name='stock' placeholder="Enter stock of book" required maxlength='2')

            button(type='submit') Add Book